<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_item_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="15dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_app_secondary"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_content_post_foro"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_title_item_post_foro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Este es el titular de mi publicacion"
                    android:layout_marginVertical="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="@color/white_app"/>
                <TextView
                    android:id="@+id/tv_content_item_post_foro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Este es el contenido de mi publicacion"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="@color/white_app"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="5dp"
                android:background="@color/white_app"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_content_post_foro"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_favorite"
                    android:background="@android:color/transparent"
                    android:tint="@color/black"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_comment"
                    android:tint="@color/black"/>
            </androidx.appcompat.widget.LinearLayoutCompat>





        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>